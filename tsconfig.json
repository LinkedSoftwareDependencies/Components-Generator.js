{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "importHelpers": false,
    "inlineSources": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true
  },
  "include": [
    "index.ts",
    "bin/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*"
  ]
}
