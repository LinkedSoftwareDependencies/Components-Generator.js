{
  "name": "componentjs-generator",
  "version": "1.0.0",
  "description": "A tool to generate and fix .jsonld component files for Components.js TypeScript classes",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest ${1}",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint . --ext .ts --cache",
    "prepare": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm run lint && npm run test"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.test.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "test"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bin": {
    "componentsjs-generate": "bin/GenerateRunnerOld.js",
    "componentsjs-fix": "bin/FixRunner.js",
    "componentsjs-fixpackage": "bin/FixPackageRunner.js"
  },
  "files": [
    "bin/**/*.d.ts",
    "bin/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/**/*.json",
    "index.d.ts",
    "index.ts"
  ],
  "dependencies": {
    "@types/lru-cache": "^5.1.0",
    "@typescript-eslint/typescript-estree": "^1.13.0",
    "child_process": "^1.0.2",
    "comment-parser": "^0.7.0",
    "componentsjs": "^3.2.1",
    "eslint": "^7.5.0",
    "eslint-config-es": "^3.19.64",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-tsdoc": "^0.2.6",
    "eslint-plugin-unused-imports": "^0.1.3",
    "jsonld-context-parser": "^2.0.2",
    "lru-cache": "^6.0.0",
    "minimist": "^1.2.0",
    "typescript": "^3.5.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^26.0.0",
    "@types/jsonld": "^1.5.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^12.6.9",
    "@types/rimraf": "^3.0.0",
    "coveralls": "^3.0.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.0",
    "jest-extended": "^0.11.2",
    "rimraf": "latest",
    "ts-jest": "^26.0.0"
  }
}
